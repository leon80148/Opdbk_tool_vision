{
  "name": "anchia-opd-toolkit",
  "version": "3.0.0",
  "description": "診所櫃檯智慧助手 - Clinic Reception Assistant",
  "main": "src/main/main.js",
  "author": "Anchia Clinic",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "build": "vite build",
    "build:win": "npm run build && electron-builder --win",
    "preview": "vite preview",
    "lint": "eslint src --ext .js,.jsx",
    "format": "prettier --write \"src/**/*.{js,jsx,json,css}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "antd": "^5.12.0",
    "better-sqlite3": "^9.2.0",
    "date-fns": "^3.0.0",
    "dayjs": "^1.11.10",
    "dbffile": "^1.12.0",
    "iconv-lite": "^0.6.3",
    "ini": "^4.1.1",
    "node-cron": "^3.0.3",
    "odbc": "^2.4.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "winston": "^3.11.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "jest": "^30.2.0",
    "prettier": "^3.1.1",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.anchia.opdtoolkit",
    "productName": "診所櫃檯智慧助手",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/main/**/*",
      "dist-renderer/**/*",
      "config/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
